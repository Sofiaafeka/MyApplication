<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/menubackground"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="@color/greenDark"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fullName"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:textDirection="rtl"
            android:text=""
            android:textColor="@color/wallet_bright_foreground_holo_dark"
            android:textSize="18dp"
            android:textStyle="bold"
            android:typeface="serif"
            />

        <Button
            android:id="@+id/interviewRqst_btn"
            android:layout_width="wrap_content"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:text="הזמן לראיון"
            android:textSize="18dp"

            android:typeface="serif"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/menubackground"
            android:layoutDirection="rtl"
            android:orientation="vertical"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="שנת לידה: "
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/yearBirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text=""
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="מקום מגורים: "
                android:textDirection="rtl"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/candidate_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text=""
                android:textDirection="rtl"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="השכלה:"
                android:textDirection="rtl"
                android:textSize="18dp"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/candidate_degree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textDirection="rtl"
                    android:textSize="18dp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/fieldOfStudy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textDirection="rtl"
                    android:textSize="18dp"
                    android:typeface="serif" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="בגרות: "
                android:textDirection="rtl"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/matriculation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text=""
                android:textDirection="rtl"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="תחום התמחות: "
                android:textSize="18dp"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/expert1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textDirection="rtl" />

                <TextView
                    android:id="@+id/years_exp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textDirection="rtl" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/expert2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textDirection="rtl" />

                <TextView
                    android:id="@+id/years_exp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textDirection="rtl" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/expert3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textDirection="rtl" />

                <TextView
                    android:id="@+id/years_exp3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textDirection="rtl" />
            </LinearLayout>

            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ציפיות שכר: "
                android:textDirection="rtl"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/desire_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text=""
                android:textDirection="rtl"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="זמינות: "
                android:textDirection="rtl"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/availability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text=""
                android:textDirection="rtl"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="היקף משרה: "
                android:textDirection="rtl"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/full_time_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text=""
                android:textDirection="rtl"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ניידות: "
                android:textSize="18dp" />

            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text=""
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="קישור לתיק עבודות:"
                android:textDirection="rtl"
                android:textSize="18dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/candidate_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textDirection="rtl"
                android:textSize="18dp"
                android:typeface="serif" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>